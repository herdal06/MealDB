<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MealDB" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/essential_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/essential_color</item>
        <item name="colorSecondaryVariant">@color/primary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- app title text -->
    <style name="TitleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/essential_color</item>
        <item name="android:textSize">@dimen/double_extra_large_size</item>
    </style>

    <style name="CardText" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/large_size</item>
    </style>
</resources>